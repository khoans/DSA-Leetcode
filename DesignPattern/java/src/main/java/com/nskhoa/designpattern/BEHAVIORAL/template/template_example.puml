@startuml Template Method Pattern Example - Game Framework

abstract class GameFramework {
    + run(): void
    + initialize(): void
    {abstract} + loadAssets(): void
    {abstract} + update( deltaTime: float): void
    {abstract} + render(): void
    {abstract} + handleInput(): void
    + cleanup(): void
    + isRunning(): boolean
    + setRunning(running: boolean): void
}

class PlatformerGame extends GameFramework {
    + loadAssets(): void
    + update( deltaTime: float): void
    + render(): void
    + handleInput(): void
}

class ShooterGame extends GameFramework {
    + loadAssets(): void
    + update( deltaTime: float): void
    + render(): void
    + handleInput(): void
}

class RPGGame extends GameFramework {
    + loadAssets(): void
    + update( deltaTime: float): void
    + render(): void
    + handleInput(): void
}

class GameEngine {
    + main()
}

