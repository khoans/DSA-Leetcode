@startuml Abstract Factory Pattern Example - UI

' Giao diện sản phẩm
interface Button {
    + render(): void
}

interface Checkbox {
    + render(): void
}

' Các sản phẩm cụ thể cho Windows
class WindowsButton implements Button {
    + render(): void
}

class WindowsCheckbox implements Checkbox {
    + render(): void
}

' Các sản phẩm cụ thể cho macOS
class MacOSButton implements Button {
    + render(): void
}

class MacOSCheckbox implements Checkbox {
    + render(): void
}

' Abstract Factory
interface UIFactory {
    + createButton(): Button
    + createCheckbox(): Checkbox
}

' Các factory cụ thể
class WindowsUIFactory implements UIFactory {
    + createButton(): Button
    + createCheckbox(): Checkbox
}

class MacOSUIFactory implements UIFactory {
    + createButton(): Button
    + createCheckbox(): Checkbox
}

' Client
class Application {
    - factory: UIFactory
    - button: Button
    - checkbox: Checkbox

    + Application(factory: UIFactory)
    + createUI(): void
    + paint(): void
}

' Quan hệ
Button <|.. WindowsButton
Button <|.. MacOSButton
Checkbox <|.. WindowsCheckbox
Checkbox <|.. MacOSCheckbox
UIFactory <|.. WindowsUIFactory
UIFactory <|.. MacOSUIFactory
Application ..> UIFactory : uses
Application *-- Button
Application *-- Checkbox

@enduml
