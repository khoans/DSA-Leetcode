@startuml Design Pattern Selection Flowchart

!define RECTANGLE class

skinparam backgroundColor #FEFECE
skinparam handwritten true
skinparam defaultFontSize 10
skinparam packageStyle rectangle
skinparam arrowColor #555555
skinparam stereotypeCBackgroundColor #87CEEB
skinparam stereotypeABackgroundColor #98FB98
skinparam stereotypeEBackgroundColor #FFB6C1

title Comprehensive Design Pattern Selection Guide

package "Design Pattern Selection" {

  package "CREATIONAL PATTERNS" {
    question_creat : Are you creating objects?;

    package "Factory Method" {
      question_fm : Need subclass to decide creation?;
      fm_answer : Factory Method Pattern;
    }

    package "Abstract Factory" {
      question_af : Need families of related objects?;
      af_answer : Abstract Factory Pattern;
    }

    package "Builder" {
      question_b : Complex step-by-step construction?;
      b_answer : Builder Pattern;
    }

    package "Prototype" {
      question_p : Clone instead of create?;
      p_answer : Prototype Pattern;
    }

    package "Singleton" {
      question_s : Exactly one instance needed?;
      s_answer : Singleton Pattern;
    }

    question_creat --> question_fm : Yes
    question_creat --> question_af : Yes
    question_creat --> question_b : Yes
    question_creat --> question_p : Yes
    question_creat --> question_s : Yes

    question_fm --> fm_answer
    question_af --> af_answer
    question_b --> b_answer
    question_p --> p_answer
    question_s --> s_answer
  }

  package "STRUCTURAL PATTERNS" {
    question_struct : Are you organizing structure?;

    package "Adapter" {
      question_adapt : Incompatible interfaces?;
      adapt_answer : Adapter Pattern;
    }

    package "Bridge" {
      question_bridge : Separate abstraction from impl?;
      bridge_answer : Bridge Pattern;
    }

    package "Composite" {
      question_comp : Part-whole hierarchies?;
      comp_answer : Composite Pattern;
    }

    package "Decorator" {
      question_dec : Add behavior dynamically?;
      dec_answer : Decorator Pattern;
    }

    package "Facade" {
      question_f : Simplify complex subsystem?;
      f_answer : Facade Pattern;
    }

    package "Flyweight" {
      question_fw : Memory optimization needed?;
      fw_answer : Flyweight Pattern;
    }

    package "Proxy" {
      question_pr : Control access to object?;
      pr_answer : Proxy Pattern;
    }

    question_struct --> question_adapt : Yes
    question_struct --> question_bridge : Yes
    question_struct --> question_comp : Yes
    question_struct --> question_dec : Yes
    question_struct --> question_f : Yes
    question_struct --> question_fw : Yes
    question_struct --> question_pr : Yes

    question_adapt --> adapt_answer
    question_bridge --> bridge_answer
    question_comp --> comp_answer
    question_dec --> dec_answer
    question_f --> f_answer
    question_fw --> fw_answer
    question_pr --> pr_answer
  }

  package "BEHAVIORAL PATTERNS" {
    question_beh : Are you handling object interaction?;

    package "Chain of Responsibility" {
      question_cor : Multiple handlers for request?;
      cor_answer : Chain of Responsibility Pattern;
    }

    package "Command" {
      question_cmd : Parameterize with requests?;
      cmd_answer : Command Pattern;
    }

    package "Interpreter" {
      question_int : Implement simple language?;
      int_answer : Interpreter Pattern;
    }

    package "Iterator" {
      question_iter : Sequential access needed?;
      iter_answer : Iterator Pattern;
    }

    package "Mediator" {
      question_med : Complex interactions?;
      med_answer : Mediator Pattern;
    }

    package "Memento" {
      question_mem : Capture/restore state?;
      mem_answer : Memento Pattern;
    }

    package "Observer" {
      question_obs : One-to-many dependency?;
      obs_answer : Observer Pattern;
    }

    package "State" {
      question_state : Change behavior by state?;
      state_answer : State Pattern;
    }

    package "Strategy" {
      question_strat : Multiple algorithms?;
      strat_answer : Strategy Pattern;
    }

    package "Template Method" {
      question_tm : Fixed algorithm structure?;
      tm_answer : Template Method Pattern;
    }

    package "Visitor" {
      question_vis : Separate algorithm from structure?;
      vis_answer : Visitor Pattern;
    }

    question_beh --> question_cor : Yes
    question_beh --> question_cmd : Yes
    question_beh --> question_int : Yes
    question_beh --> question_iter : Yes
    question_beh --> question_med : Yes
    question_beh --> question_mem : Yes
    question_beh --> question_obs : Yes
    question_beh --> question_state : Yes
    question_beh --> question_strat : Yes
    question_beh --> question_tm : Yes
    question_beh --> question_vis : Yes

    question_cor --> cor_answer
    question_cmd --> cmd_answer
    question_int --> int_answer
    question_iter --> iter_answer
    question_med --> med_answer
    question_mem --> mem_answer
    question_obs --> obs_answer
    question_state --> state_answer
    question_strat --> strat_answer
    question_tm --> tm_answer
    question_vis --> vis_answer
  }

  package "FRAMEWORK/ENTERPRISE" {
    question_fw : Are you building frameworks/libraries?;

    package "Framework" {
      question_fwk : Need flexible object creation?;
      fwk_answer : Factory/Abstract Factory;
    }

    package "Enterprise" {
      question_ent : Need to manage resources?;
      ent_answer : Singleton/Factory;
    }

    question_fw --> question_fwk : Yes
    question_fw --> question_ent : Yes

    question_fwk --> fwk_answer
    question_ent --> ent_answer
  }

  package "PERFORMANCE OPTIMIZATION" {
    question_perf : Are you optimizing performance?;

    package "Memory" {
      question_mem_opt : Memory issues?;
      mem_opt_answer : Flyweight;
    }

    package "Caching" {
      question_cache : Need caching?;
      cache_answer : Prototype/Singleton;
    }

    question_perf --> question_mem_opt : Yes
    question_perf --> question_cache : Yes

    question_mem_opt --> mem_opt_answer
    question_cache --> cache_answer
  }

  package "GUI/EVENT SYSTEMS" {
    question_gui : Are you working with GUI/Event-driven systems?;

    package "Events" {
      question_events : Need to handle events?;
      events_answer : Observer/Command;
    }

    package "Components" {
      question_comp_gui : Need to manage components?;
      comp_gui_answer : Composite/Mediator;
    }

    question_gui --> question_events : Yes
    question_gui --> question_comp_gui : Yes

    question_events --> events_answer
    question_comp_gui --> comp_gui_answer
  }

  package "ENTERPRISE APPS" {
    question_enterprise : Are you building enterprise applications?;

    package "Resources" {
      question_res : Need to manage resources?;
      res_answer : Singleton/Factory;
    }

    package "Business Logic" {
      question_bl : Need to handle business logic?;
      bl_answer : Strategy/State;
    }

    question_enterprise --> question_res : Yes
    question_enterprise --> question_bl : Yes

    question_res --> res_answer
    question_bl --> bl_answer
  }
}

' Main flow connections
question_creat ..> question_struct : No, organizing structure
question_struct ..> question_beh : No, handling interaction
question_beh ..> question_fw : No, building frameworks
question_fw ..> question_perf : No, optimizing performance
question_perf ..> question_gui : No, working with GUI
question_gui ..> question_enterprise : No, building enterprise apps

note top of question_creat
  CREATIONAL PATTERNS:
  When creating objects
end note

note top of question_struct
  STRUCTURAL PATTERNS:
  When organizing structure
end note

note top of question_beh
  BEHAVIORAL PATTERNS:
  When handling object interaction
end note

note bottom of question_enterprise
  Additional Context Questions:
  Frameworks, Performance, GUI, Enterprise
end note

@enduml
